<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@color/orange"
    >


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:textSize="23sp"
        />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"

        />

    <EditText
        android:id="@+id/edFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@id/tvFirstName"
        app:layout_constraintLeft_toRightOf="@id/tvFirstName"
        android:layout_marginLeft="22dp"
        android:background="#F1F1F1"/>

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintTop_toBottomOf="@id/tvFirstName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/edLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLastName"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1"/>



    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintTop_toBottomOf="@id/tvLastName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />



    <EditText
        android:id="@+id/edUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1" />




    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />


    <EditText
        android:id="@+id/edPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPassword"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPassword"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1"/>




    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />



    <EditText
        android:id="@+id/edEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1" />



    <TextView
        android:id="@+id/tvDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />


    <EditText
        android:id="@+id/edDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:ems="8"
        android:inputType="date"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDateOfBirth"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        tools:ignore="SpeakableTextPresentCheck"
        android:hint="dd/mm/yyyy"
        />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/tvDateOfBirth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/edAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1" />



    <TextView
        android:id="@+id/tvPostalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/edPostalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="textPostalAddress"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPostalCode"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1" />




    <TextView
        android:id="@+id/tvApartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartment"
        app:layout_constraintTop_toBottomOf="@id/tvPostalCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvFirstName"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/edApt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/tvApartment"
        app:layout_constraintStart_toStartOf="@id/edFirstName"
        android:background="#F1F1F1" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"

        />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        app:layout_constraintBaseline_toBaselineOf="@id/btnRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"

        />


</androidx.constraintlayout.widget.ConstraintLayout>